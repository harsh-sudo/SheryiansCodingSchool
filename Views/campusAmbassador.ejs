        function findmatches(wordtoMatch, aarr) {
            // console.log(wordtoMatch, aarr);
            let ans = aarr.filter(unknown => unknown.name.toLowerCase().startsWith(wordtoMatch.toLowerCase()));
            return ans;
        }

        function displayMathces() {
