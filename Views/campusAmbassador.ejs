                document.querySelector("#search-bar input").style.opacity = 1;
                document.querySelector("#search-bar input").style.width = "235px";
                document.querySelector("#search-bar").style.width = "auto";
                document.querySelector("#search-bar i").style.boxShadow = "none"
                flag = 1;
            } else {
                document.querySelector("#search-bar input").style.opacity = 0;
                document.querySelector("#search-bar input").style.width = "0px";
                document.querySelector("#search-bar i").style.boxShadow = " 0px 2px 15px rgba(164, 255, 255, 0.5)"
