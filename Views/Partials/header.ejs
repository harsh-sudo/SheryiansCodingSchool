        <script>
            document.querySelector("#greeting_user").addEventListener("mouseenter", function () {
                document.querySelector("#popup_box").style.display = "flex";
            })
            document.querySelector("#nav-main").addEventListener("mouseleave", function () {
                document.querySelector("#popup_box").style.display = "none";
            })
