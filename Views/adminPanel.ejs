<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> </title>
    <link rel="stylesheet" href="/css/adminPanel.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
</head>
    <body>
        <div id="main">
            <%- include('Partials/header.ejs') %>

            <div id="courses-admin-panel">
                <h2>Admin Panel of <span>Courses</span></h2>
                <p>Welcome to the admin panel of Courses</p>
    
                <div id="courses-links">
                    <h4 class="course-feature" id="courses-add">Add course</h4>
                    <h4 class="course-feature" id="courses-edit">Edit course</h4>
                    <h4><a href="adminPanel/coursesdata">Courses Data</a></h4>
                    <h4 class="course-feature" id="courses-delete">Delete course</h4>
                </div>
            </div>
            <div id="campusAmbassador-admin-panel">
                <h2>Admin Panel of <span>Campus Ambassador</span></h2>
                <p>Welcome to the admin panel of Campus Ambassador</p>
                <div id="campusAmbassador-links">
                    <h4 class="campusAmbassador-feature" id="campusAmbassador-add">Add campusAmbassador</h4>
                    <h4 class="campusAmbassador-feature" id="campusAmbassador-edit">Edit campusAmbassador</h4>
                    <h4 class="campusAmbassador-feature" id="campusAmbassador-delete">Delete campusAmbassador</h4>
                </div>
            </div>
            <div id="footer">
                <p>&copy; Sheryans Coding School</p>
            </div>
            <div class="courses-window" id="courses-add-window">
                <h5 class="back" id="courses-add-window"><i id="courses-add-window" class="ri-arrow-left-s-line"></i></h5>
                <div id="add-course">
                    <form action="/adminPanel/addCourse" method="post" enctype="multipart/form-data">
                        <input type="text" name="course_name" id="courseName" placeholder="Course Name" required>
                        <input type="text" name="course_subHeading" id="course_subHeading" placeholder="Course Sub-Heading" required>
                        <textarea name="description" id="courseDescription" cols="30" rows="10" placeholder="Description for Course" required></textarea><br>
                        <input type="text" name="fees" id="coursePrice" placeholder="Price" required>
                        <input type="file" name="image1" id="courseImage" placeholder="Add img/gif" required>
                        <input type="text" name="duration" id="Duration" placeholder="Duration (In Classes)" required>
                        <input type="date" name="startOn" id="startOn" placeholder="Starting On" required>
                        <input type="text" name="level" id="level" placeholder="Level" required>
                        <input type="text" name="course_id" id="course_id" placeholder="Course ID" required><br>
                        <input type="text" name="projectOverviewHeading1" id="project-Overview-Heading" placeholder="Project Overview Heading 1" required>
                        <input type="text" name="projectOverviewHeading2" id="project-Overview-Heading" placeholder="Project Overview Heading 2" required>
                        <input type="text" name="projectOverviewHeading3" id="project-Overview-Heading" placeholder="Project Overview Heading 3" required>
                        <textarea name="projectOverviewDescription1" id="project-Overview-Description" cols="30" rows="10" placeholder="Project Overview Description 1" required></textarea>
                        <textarea name="projectOverviewDescription2" id="project-Overview-Description" cols="30" rows="10" placeholder="Project Overview Description 2" required></textarea>
                        <textarea name="projectOverviewDescription3" id="project-Overview-Description" cols="30" rows="10" placeholder="Project Overview Description 3" required></textarea>
                        <input type="file" name="image2" id="projectOverviewImage" placeholder="Add img/gif" required>
                        <input type="file" name="image3" id="projectOverviewImage" placeholder="Add img/gif" required>
                        <input type="file" name="image4" id="projectOverviewImage" placeholder="Add img/gif" required>
                        <input type="text" name ="bulletPoint1" id="bulletPoint" placeholder="First Bullet Point" required>    
                        <input type="text" name ="bulletPoint2" id="bulletPoint" placeholder="First Bullet Point" required>    
                        <input type="text" name ="bulletPoint3" id="bulletPoint" placeholder="First Bullet Point" required>    
                        <input type="text" name ="bulletPoint4" id="bulletPoint" placeholder="First Bullet Point" required>    

                        <input type="submit" value="Add Course">
                    </form>
                </div>
            </div>
            <div class="courses-window" id="courses-edit-window">
                <h5 class="back" id="courses-edit-window"><i id="courses-edit-window" class="ri-arrow-left-s-line"></i></h5>
                <div id="findCourse">
                    <form action="/adminPanel/findCourse" method="post">
                        <input type="text" name="course_name" id="courseName" placeholder="Course Name" required>
                        <input type="text" name="course_id" id="courseName" placeholder="Course_ID" required><br>
                        <input type="submit" value="Find Course">
                    </form>
                </div>
                <div id="updateCourse">
                    <form action="/adminPanel/updateCourse/<%= course._id %>" method="post" enctype="multipart/form-data">
                        <input type="text" name="course_name" id="courseName" placeholder="Course Name" required value="<%=course.course_name%>">
                        <input type="text" name="course_subHeading" id="course_subHeading" placeholder="Course Sub-Heading" required value="<%=course.subHeading%>">
                        <textarea name="description" id="courseDescription" cols="30" rows="10" placeholder="Description for Course" required><%=course.description%></textarea>
                        <input type="text" name="fees" id="coursePrice" placeholder="Price" required value="<%=course.fees%>">
                        <input type="file" name="image1" id="courseImage" placeholder="Add img/gif" value=" <%=course.image%>">
                        <input type="text" name="duration" id="Duration" placeholder="Duration" required value="<%=course.duration%>">
                        <input type="text" name="startOn" id="Duration" placeholder="Starting On" required value="<%=course.startOn%>">
                        <input type="text" name="level" id="level" placeholder="Level" required value="<%=course.level%>">
                        <input type="text" name="course_id" id="course_id" placeholder="Course ID" required value="<%=course.course_id%>" readonly><br>
                        <% if(course.length != 0){ %> 
                        <input type="text" name="projectOverviewHeading1" id="project-Overview-Heading" placeholder="Project Overview Heading 1" required value="<% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[0].Heading %> <% } %>">
                        <input type="text" name="projectOverviewHeading2" id="project-Overview-Heading" placeholder="Project Overview Heading 2" required value="<% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[1].Heading %> <% } %>">
                        <input type="text" name="projectOverviewHeading3" id="project-Overview-Heading" placeholder="Project Overview Heading 3" required value="<% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[2].Heading %> <% } %>">
                        <textarea name="projectOverviewDescription1" id="project-Overview-Description" cols="30" rows="10" placeholder="Project Overview Description 1" ><% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[0].description %> <% } %></textarea>
                        <textarea name="projectOverviewDescription2" id="project-Overview-Description" cols="30" rows="10" placeholder="Project Overview Description 2" ><% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[1].description %> <% } %></textarea>
                        <textarea name="projectOverviewDescription3" id="project-Overview-Description" cols="30" rows="10" placeholder="Project Overview Description 3" ><% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[2].description %> <% } %></textarea>
                        <input type="file" name="image2" id="projectOverviewImage" placeholder="Add img/gif" value="<% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[0].image %> <% } %>">
                        <input type="file" name="image3" id="projectOverviewImage" placeholder="Add img/gif" value="<% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[0].image %> <% } %>">
                        <input type="file" name="image4" id="projectOverviewImage" placeholder="Add img/gif" value="<% if(course.projectOverview.length > 0){ %> <%= course.projectOverview[0].image %> <% } %>">
                        <% } %> 
                        <input type="text" name ="bulletPoint1" id="bulletPoint" placeholder="First Bullet Point">    
                        <input type="text" name ="bulletPoint2" id="bulletPoint" placeholder="First Bullet Point">    
                        <input type="text" name ="bulletPoint3" id="bulletPoint" placeholder="First Bullet Point">    
                        <input type="text" name ="bulletPoint4" id="bulletPoint" placeholder="First Bullet Point">
                        <input type="submit" value="Update Course">
                    </form>
                </div>
            </div>
            <div class="campus-window" id="campusAmbassador-add-window">
                <h5 class="back" id="campusAmbassador-add-window"><i id="campusAmbassador-add-window" class="ri-arrow-left-s-line"></i></h5>
                <div id="addCampusAmbassador">
                    <form action="/adminPanel/addCampusAmbassador" method="post" enctype="multipart/form-data">
                        <input type="text" name="name" id="name" placeholder="Name" required>
                        <input type="text" name="email" id="email" placeholder="Email" required>
                        <input type="text" name="phone" id="phone" placeholder="Phone" required>
                        <input type="text" name="college" id="college" placeholder="College" required>
                        <input type="text" name="course" id="course" placeholder="Course" required>
                        <input type="text" name="branch" id="branch" placeholder="Branch" required>
                        <input type="text" name="year" id="year" placeholder="Year" required>
                        <input type="text" name="city" id="city" placeholder="City" required>
                        <input type="file" name="image" id="image" placeholder="Add DP for Ambassador" required>
                        <input type="submit" value="Add Campus Ambassador">
                    </form>
                </div>
            </div>
            <div class="campus-window" id="campusAmbassador-edit-window">
                <h5 class="back" id="campusAmbassador-edit-window"><i id="campusAmbassador-edit-window" class="ri-arrow-left-s-line"></i></h5>
                <div id="editCampusAmbassador">
                    <form action="/adminPanel/findCampusAmbassador" method="post">
                        <input type="text" name="name" id="name" placeholder="Name" required>
                        <input type="text" name="college" id="college" placeholder="College(If you know)">
                        <input type="submit" value="Find Campus Ambassador">
                    </form>
                </div>
    
                <div id="updateCampusAmbassador">
                <% if(campusAmbassador.length > 0){ %>
                    <% for(let i of campusAmbassador){ %> 
                    <form action="/adminPanel/updateCampusAmbassador/<%= i._id %>" method="post" enctype="multipart/form-data">
                        <input type="text" name="name" id="name" placeholder="Name" required value="<%= i.name %>">
                        <input type="text" name="email" id="email" placeholder="Email" required value="<%= i.email  %>">
                        <input type="text" name="phone" id="phone" placeholder="Phone" required value="<%= i.phone%>" readonly >
                        <input type="text" name="college" id="college" placeholder="College" required value="<%= i.college %>">
                        <input type="text" name="course" id="course" placeholder="Course" required value="<%= i.course %>">
                        <input type="text" name="branch" id="branch" placeholder="Branch" required value="<%= i.branch %>">
                        <input type="text" name="year" id="year" placeholder="Year" required value="<%= i.year %>">
                        <input type="text" name="city" id="city" placeholder="City" required value="<%= i.city  %>">
                        <input type="file" name="image" id="image" placeholder="Add DP for Ambassador">
                        <input type="submit" value="Add Campus Ambassador">
                    </form>
                    <% } %> 
                <% } %> 
                </div>
            </div>
            <div class="campus-window" id="campusAmbassador-delete-window">
                <h5 class="back" id="campusAmbassador-delete-window"><i id="campusAmbassador-delete-window" class="ri-arrow-left-s-line"></i></h5>
                <div id="deleteCampusAmbassador">
                    <form action="/adminPanel/deleteCampusAmbassador" method="post">
                        <input type="text" name="name" id="name" placeholder="Student Name" required>
                        <input type="text" name="phone" id="phone" placeholder="Contact No." required>
                        <input type="submit" value="Delete Campus Ambassador">

                <div id="deleteCourse">
                    <form action="/adminPanel/deleteCampusAmbassador" method="post">
                        <input type="text" name="name" id="name" placeholder="Student Name" required>
                        <input type="text" name="phone" id="phone" placeholder="Contact No." required>
                        <input type="submit" value="Delete Course"d>
                    </form>
                </div>
            </div>
        </div>
        <script>
            var courseFeature = document.querySelectorAll(".course-feature");
            courseFeature.forEach(feature => {
                feature.addEventListener("click", (dets) => {
                    document.querySelector(`#${dets.target.id}-window`).style.display = "Initial";
                })
            });
            var campusFeature = document.querySelectorAll(".campusAmbassador-feature");
            campusFeature.forEach(feature => {
                feature.addEventListener("click", (dets) => {
                    document.querySelector(`#${dets.target.id}-window`).style.display = "Initial";
                })
            });
            var back = document.querySelectorAll('.back');
            back.forEach(back => {
                back.addEventListener("click", (dets) => {
                    document.querySelector(`#${dets.target.id}`).style.display = "none";
                    document.querySelector(`#${dets.target.id}`).style.display = "none";
                })
            });
        </script>
    </body>
</html>